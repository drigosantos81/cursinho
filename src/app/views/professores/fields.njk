<div class="item">
    <div>Avatar URL</div>
        <div>
            <input type="url" name="avatar_url" placeholder="http://..." value="{{ professor.avatar_url }}">
        </div>        
</div>

<div class="item">
    <div>Instrutor</div>
    <div>
        <input type="text" name="name" placeholder="Nome do instrutor..." value="{{ professor.name }}">
    </div>        
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ professor.birth }}">
    </div>        
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="M" 
                    {% if professor.gender == "M" %}
                        checked
                    {% endif %}>Masculino
        </span>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="F"
                    {% if professor.gender == "F" %}
                        checked
                    {% endif %}>Feminino
        </span>
    </div>        
</div>

<div class="item">
    <div>Grau de Escolaridade</div>
    <div>
        <select name="estudo" id="">
            <option value="Ensino Médio Completo">Ensino Médio Completo</option>
            <option value="Superior Completo">Superior Completo</option>
            <option value="Mestrado">Mestrado</option>
            <option value="Doutorado">Doutorado</option>
        </select>
    </div>        
</div>

<div class="item">
    <div>Tipo da Aula</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="aula" 
                value="P" 
                    {% if professor.aula == "P" %}
                        checked
                    {% endif %}>Presencial
        </span>
        <span>
            <input 
                type="radio" 
                name="aula" 
                value="E"
                    {% if professor.aula == "E" %}
                        checked
                    {% endif %}>EAD
        </span>
    </div>        
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="services" placeholder="Dígite os serviços prestados separados por vírgula..." value="{{ professor.services }}">
    </div>        
</div>

<button type="submit">Salvar</button>
